{{#section 'css'}}
    <link rel="stylesheet" type="text/css" href="/stylesheets/product_styles.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/product_responsive.css">
{{/section}}

{{#section 'js'}}
    <script src='https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js' referrerpolicy="origin"></script>
    <script>
        tinymce.init({
        selector: '#mytextarea'
        });
    </script>
    <script src="/javascript/js/product_custom.js"></script>
{{/section}}

 <!-- Product infomation -->

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-3 align-items-center justify-content-center text-center">
          <img src="/images/user.svg" alt="" class="img-rounded center-block" style="height: 200px">
          <button type="button" class="btn btn-danger mt-4">Thêm tối thiểu 3 ảnh cho sản phẩm</button>
          <label class="file mt-3">
            <input type="file" id="file">
            <span class="file-custom"></span>
          </label>
        </div>
        <div class="col-md-9 pl-4">
          <form>
            <div class="form-group">
              <label for="inputProductName4">Tên sản phẩm</label>
              <input type="text" class="form-control" id="inputProductName4" placeholder="Tên sản phẩm">
            </div>
            <div class="form-group">
              <label for="inputStartPrice">Giá khởi điểm</label>
              <input type="number" class="form-control" id="inputStartPrice" placeholder="Giá khởi điểm">
            </div>
            <div class="form-group">
              <label for="inputPriceStep">Bước giá</label>
              <input type="number" class="form-control" id="inputPriceStep" placeholder="Bước giá">
            </div>
            <div class="form-group">
              <label for="inputPurchasePrice">Giá mua ngay</label>
              <input type="number" class="form-control" id="inputPurchasePrice" placeholder="Giá mua ngay">
            </div>
            <div class="form-group"><label for="form-group">Tự gia hạn không?</label>
              <div class="form-check pl-5 pt-2">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="no" checked>
                <label class="form-check-label" for="gridRadios1">
                  Không
                </label>
              </div>
              <div class="form-check pl-5">
                <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="yes">
                <label class="form-check-label" for="gridRadios2">
                  Có
                </label>
              </div>
            </div>
            <form method="post">
                <textarea id="mytextarea" name="mytextarea">Hello, World!</textarea>
            </form>
            <button class="btn btn-primary mt-4">Đăng sản phẩm</button>
          </form>
        </div>
      </div>
    </div>

    