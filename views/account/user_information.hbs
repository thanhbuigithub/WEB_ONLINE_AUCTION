{{#section 'js'}}
<script src="/javascript/js/product_custom.js"></script>
<script>
	function eval(id) {
		$("#" + id).css({ visibility: "visible", height: "" });
	}
	function done(id) {
		$("#evaluate" + id).css({ visibility: "hidden" });
		$("#" + id).css({ visibility: "hidden", height: "0px" });
	}
</script>
{{/section}}

