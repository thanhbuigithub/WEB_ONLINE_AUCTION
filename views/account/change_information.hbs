<!-- Product infomation -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-3 align-items-center justify-content-center text-center">
      <img src="/images/user.svg" alt="" class="img-rounded center-block" style="height: 200px">
      <button type="button" class="btn btn-danger mt-4">Thêm ảnh đại diện</button>
      <label class="file mt-3">
        <input type="file" id="file">
        <span class="file-custom"></span>
      </label>
    </div>
    <div class="col-md-9 pl-4">
      <form>
        <div class="form-group">
          <div class="row">
            <label for="first_name">First Name</label>
            <input type="text" class="form-control" id="first_name" name="first_name">
          </div>

        </div>
        <div class="form-group">
          <div class="row">
            <label for="last_name">Last Name</label>
            <input type="text" class="form-control" id="last_name" name="last_name">
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="your_dob">Date of Birth</label>
            <input type="text" class="form-control input-text js-datepicker" id="your_dob" name="dob">
            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="autocomplete">Your Address</label>
            <input type="text" class="form-control" onFocus="geolocate()" id="autocomplete" name="addr">
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="txtUsername">User Name</label>
            <input type="text" class="form-control" id="txtUsername" name="username">
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="your_email">Your Email</label>
            <input type="text" class="form-control" id="your_email" name="email">
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="txtPassword">Old Password</label>
            <input type="password" class="form-control" id="txtPassword" name="password" readonly>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <label for="txtNPassword">New Password</label>
            <input type="password" class="form-control" id="txtNPassword" name="Npassword">
          </div>
        </div>
        <button type="button" onclick="location.href='/account/information'" class="btn btn-outline-primary btn-lg mt-4 float-left "> <i class="fa fa-backward mr-2" aria-hidden="true"></i>Quay lại</button>
        <button type="button" onclick="location.href='#'" class="btn btn-outline-success btn-lg mt-4 float-right "><i class="fa fa-check mr-2" aria-hidden="true"></i>Save</button>
      </form>
    </div>
  </div>
</div>