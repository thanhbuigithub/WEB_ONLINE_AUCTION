							</div>
							<div class="product_fav" data-id="{{this._id}}"><i class="fas fa-heart"></i></div>
							{{#if this.isNew}}
							<ul class="product_marks">
								{{!-- <li class="product_mark product_discount">-25%</li> --}}
								<li class="product_mark product_new">new</li>
							</ul>
							{{/if}}

						</div>

						{{/each}}
					</div>


				</div>

				<!-- Shop Page Navigation -->

				<div class="shop_page_nav d-flex flex-row justify-content-end">
					{{#if is_not_first_page}}
					<a href="./{{pre_page}}">
